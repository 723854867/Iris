<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.busap.vcs.data.mapper.InviteInfoDAO">
	<sql id="page">limit #{pageStart},#{pageSize}</sql>
	<sql id="inviteInfoFiledSql"> 
		select i.id,
		i.create_at as createDate,
		i.modify_at as modifyDate,
		i.data_from as dataFrom,
		i.creator_id as creatorId,
		i.title,
		i.description,
		i.status,
		i.pic_path as picPath,
		i.platform_name as platformName,
		i.platform_mark as platformMark,
		i.modify_name as modifyName,
		i.invite_info_url as inviteInfoUrl
    </sql>

	<select id="findAllInviteInfo" resultType="com.busap.vcs.data.vo.InviteInfoVO">
		<include refid="inviteInfoFiledSql"/>
		from invite_info i
	</select>
	
	<select id="findInviteInfoByPlatformMark"  resultType="com.busap.vcs.data.vo.InviteInfoVO" >
		<include refid="inviteInfoFiledSql"/>
		from invite_info i where i.platform_mark= #{platformMark}
	</select>
	
	<select id="findAvaliblelInviteInfo" resultType="com.busap.vcs.data.vo.InviteInfoVO">
		<include refid="inviteInfoFiledSql"/>
		from invite_info i where status=1
	</select>

</mapper>
