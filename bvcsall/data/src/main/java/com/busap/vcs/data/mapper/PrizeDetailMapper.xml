    <resultMap id="BaseResultMap" type="com.busap.vcs.data.model.PrizeDetailDisplay">
        <id column="id" property="id"/>
        <result column="create_at" property="createDate"/>
        <result column="modify_at" property="modifyDate"/>
        <result column="data_from" property="dataFrom"/>
        <result column="creator_id" property="creatorId"/>
        <result column="prize_id" property="prizeId"/>
        <result column="prize_level" property="prizeLevel"/>
        <result column="prize_level_name" property="prizeLevelName"/>
        <result column="prize_name" property="prizeName"/>
        <result column="user_id" property="userId"/>
        <result column="pic" property="userPic"/>
        <result column="vstat" property="vstat"/>
        <result column="username" property="username"/>
    </resultMap>
    
    <sql id="page">limit #{pageStart},#{pageSize}</sql>

    <sql id="where_sql">
        <where>
            <if test="id != null">
                AND pd.id = #{id}
            </if>
            <if test="prizeId != null">
                AND pd.prize_id = #{prizeId}
            </if>
            <if test="prizeLevel != null">
                AND pd.prize_level = #{prizeLevel}
            </if>
            <if test="name != null and name != ''">
                AND r.name LIKE CONCAT('%',#{name},'%')
            </if>
            <if test="username != null and username != ''">
                AND r.username LIKE CONCAT('%',#{username},'%')
            </if>
            <if test="phone != null and phone != ''">
                AND r.phone LIKE CONCAT('%',#{phone},'%')
            </if>
            <if test="userId != null">
                AND pd.user_id = #{userId}
            </if>
        </where>
    </sql>

    <select id="select" parameterType="com.busap.vcs.data.model.PrizeDetailDisplay" resultMap="BaseResultMap">
        SELECT
        pd.id,
        pd.prize_id,
        pd.prize_level,
        pd.prize_level_name,
        r.name,
        r.pic,
        pd.creator_id,
        pd.create_at,
        pd.prize_name,
        pd.user_id,
        r.username,
        r.phone
        FROM prize_detail pd
        LEFT JOIN prize p ON p.id = pd.prize_id
        LEFT JOIN ruser r ON r.id = pd.user_id
        <include refid="where_sql"/>
        ORDER BY pd.prize_level ASC
    </select>
    
    <select id="selectByPrizeId" resultMap="BaseResultMap">
        SELECT
        pd.id,
        pd.prize_id,
        pd.prize_level,
        pd.prize_level_name,
        r.name as username,
        r.pic,
        r.vstat,
        pd.creator_id,
        pd.create_at,
        pd.prize_name
        FROM prize_detail pd
        LEFT JOIN prize p ON p.id = pd.prize_id
        LEFT JOIN ruser r ON r.id = pd.user_id
        WHERE pd.prize_id = #{prizeId} AND pd.prize_level=#{prizeLevel}
        <include refid="page"/>
    </select>
    
    <select id="selectAllByPrizeId" resultMap="BaseResultMap">
        SELECT
        pd.id,
        pd.prize_id,
        pd.prize_level,
        pd.prize_level_name,
        r.name as username,
        r.pic,
        r.vstat
        pd.creator_id,
        pd.create_at,
        pd.prize_name
        FROM prize_detail pd
        LEFT JOIN prize p ON p.id = pd.prize_id
        LEFT JOIN ruser r ON r.id = pd.user_id
        WHERE pd.prize_id = #{prizeId} AND pd.prize_level=#{prizeLevel}
    </select>
    
    <select id="selectPrizeLevel" resultType="Integer">
        SELECT
        DISTINCT(prize_level)
        FROM prize_detail pd
		WHERE pd.prize_id = #{prizeId} order by prize_level asc
    </select>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        id,
