<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.busap.vcs.data.mapper.PrizeDao">

    <resultMap id="BaseResultMap" type="com.busap.vcs.data.model.PrizeDisplay">
        <id column="id" property="id"/>
        <result column="create_at" property="createDate"/>
        <result column="modify_at" property="modifyDate"/>
        <result column="data_from" property="dataFrom"/>
        <result column="creator_id" property="creatorId"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="name" property="name"/>
        <result column="activity_id" property="activityId"/>
        <result column="username" property="username"/>
    </resultMap>

    <sql id="where_sql">
        <where>
            <if test="id != null">
                AND p.id = #{id}
            </if>
            <if test="activityId != null">
                AND p.activity_id = #{activityId}
            </if>
            <if test="name != null and name != ''">
                AND p.name LIKE CONCAT('%',#{name,jdbcType=VARCHAR},'%')
            </if>
            <if test="status != null">
                AND p.status = #{status}
            </if>
            <choose>
                <when test="startDate != null and endDate != null">
                    <![CDATA[ AND (DATE_FORMAT(p.start_date, '%Y-%m-%d')  >= #{startDate,jdbcType=TIMESTAMP} OR DATE_FORMAT(p.end_date, '%Y-%m-%d')  <= #{endDate,jdbcType=TIMESTAMP}) ]]>
                </when>
                <otherwise>
                    <if test="startDate != null">
                        <![CDATA[ AND DATE_FORMAT(p.start_date, '%Y-%m-%d')  >= #{startDate,jdbcType=TIMESTAMP} ]]>
                    </if>
                    <if test="endDate != null">
                        <![CDATA[ AND DATE_FORMAT(p.end_date, '%Y-%m-%d')  <= #{endDate,jdbcType=TIMESTAMP} ]]>
                    </if>
                </otherwise>
            </choose>

        </where>
    </sql>

    <select id="select" parameterType="com.busap.vcs.data.entity.Prize" resultMap="BaseResultMap">
        SELECT
        p.id,
        p.create_at,
        p.modify_at,
        p.data_from,
        p.creator_id,
        p.start_date,
        p.end_date,
        p.name,
        p.activity_id,
        u.username,
        p.status
        FROM prize p
        LEFT JOIN user u ON u.id = p.creator_id
        <include refid="where_sql"/>
    </select>
    
    <select id="selectAvalible" resultMap="BaseResultMap">
        SELECT
        p.id,
        p.create_at,
        p.modify_at,
        p.data_from,
        p.creator_id,
        p.start_date,
        p.end_date,
        p.name,
        p.activity_id,
        p.status
        FROM prize p
        WHERE 
        <![CDATA[p.start_date <= now() AND p.end_date >= now() AND p.activity_id = #{activityId} AND p.status = 0]]>
    </select>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
		SELECT
		id,
		create_at,
		modify_at,
		data_from,
		creator_id,
		start_date,
		end_date,
		name,
		activity_id,
		status
		FROM prize
		WHERE
		id = #{id,jdbcType=BIGINT}
	</select>

    <insert id="insert" parameterType="com.busap.vcs.data.entity.Prize" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO prize
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null and name != ''">
                name,
            </if>
            <if test="createDateStr != null">
                create_at,
            </if>
            <if test="creatorId != null">
                creator_id,
            </if>
            <if test="dataFrom != null and dataFrom != ''">
                data_from,
            </if>
            <if test="activityId != null">
                activity_Id,
            </if>
            <if test="startDate != null">
                start_date,
            </if>
            <if test="endDate != null">
                end_date,
            </if>
            <if test="status != null">
                status,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="name != null and name != ''">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="createDateStr != null">
                #{createDateStr,jdbcType=TIMESTAMP},
            </if>
            <if test="creatorId != null">
                #{creatorId,jdbcType=INTEGER},
            </if>
            <if test="dataFrom != null">
                #{dataFrom,jdbcType=VARCHAR},
            </if>
            <if test="activityId != null">
                #{activityId,jdbcType=BIGINT},
            </if>
            <if test="startDate != null">
                #{startDate,jdbcType=TIMESTAMP},
            </if>
            <if test="endDate != null">
                #{endDate,jdbcType=TIMESTAMP},
            </if>
            <if test="status != null">
                #{status,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.busap.vcs.data.entity.Prize">
        UPDATE prize
        <set>
            <if test="id != null">
                id = #{id,jdbcType=INTEGER},
            </if>
            <if test="name != null and name != ''">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="createDateStr != null">
                create_at = #{createDateStr,jdbcType=TIMESTAMP},
            </if>
            <if test="creatorId != null">
                creator_id = #{creatorId,jdbcType=INTEGER},
            </if>
            <if test="dataFrom != null">
                data_from = #{dataFrom,jdbcType=VARCHAR},
            </if>
            <if test="activityId != null">
                activity_id = #{activityId,jdbcType=BIGINT},
            </if>
            <if test="startDate != null">
                start_date = #{startDate,jdbcType=TIMESTAMP},
            </if>
            <if test="endDate != null">
                end_date = #{endDate,jdbcType=TIMESTAMP},
            </if>
            <if test="status != null">
                status = #{status,jdbcType=INTEGER},
            </if>
            modify_at = now(),
        </set>
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        DELETE FROM prize WHERE id = #{id,jdbcType=BIGINT}
    </delete>

    <select id="selectActivityVideoUsers" parameterType="java.util.Map" resultType="com.busap.vcs.data.model.ActivityVideoUser">
		SELECT
        r.id,r.type,r.name,r.username,r.vstat AS vipStat,r.phone,r.pic
        FROM activity_video av
        LEFT JOIN video v ON v.id = av.videoid
        LEFT JOIN ruser r ON r.id = v.creator_id
        WHERE av.activityid = #{activityId}
		AND r.id IS NOT NULL
        <choose>
            <when test="user != null">
                <if test="user == 1">
                    AND r.id = #{userKeyword}
                </if>
                <if test="user == 2">
                    AND r.username LIKE CONCAT('%',#{userKeyword},'%')
                </if>
                <if test="user == 3">
                    AND r.name LIKE CONCAT('%',#{userKeyword},'%')
                </if>
                <if test="user == 4">
                    AND r.phone LIKE CONCAT('%',#{userKeyword},'%')
                </if>
            </when>
        </choose>
        <if test="type != null and type != ''">
            AND r.type = #{type}
        </if>
        <if test="vipStat != null">
            AND r.vstat = #{vipStat}
        </if>
        GROUP BY r.id
    </select>

</mapper>