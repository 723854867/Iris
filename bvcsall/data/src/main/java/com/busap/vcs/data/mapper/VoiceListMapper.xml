<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.busap.vcs.data.mapper.VoiceListDao">

    <insert id="insert" parameterType="com.busap.vcs.data.entity.VoiceList">
        INSERT INTO voice_list
        <trim prefix="(" suffix=")" suffixOverrides=",">
            create_time,
            <if test="id != null">
                id,
            </if>
            <if test="name != null and name != ''">
                name,
            </if>
            <if test="personNumber != null">
                person_number,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="state != null">
                state,
            </if>
            <if test="startTime != null">
                start_time,
            </if>
            <if test="endTime != null">
                end_time,
            </if>
            <if test="url != null and url != ''">
                url,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            now(),
            <if test="id != null">
                #{id,jdbcType=BIGINT},
            </if>
            <if test="name != null and name != ''">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="personNumber != null">
                #{personNumber,jdbcType=INTEGER},
            </if>
            <if test="type != null">
                #{type,jdbcType=INTEGER},
            </if>
            <if test="state != null">
                #{state,jdbcType=INTEGER},
            </if>
            <if test="startTime != null">
                #{startTime,jdbcType=TIMESTAMP},
            </if>
            <if test="endTime != null">
                #{endTime,jdbcType=TIMESTAMP},
            </if>
            <if test="url != null and url != ''">
                #{url,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <select id="selectVoiceList" parameterType="map" resultType="com.busap.vcs.data.entity.VoiceList">
      SELECT
      id,name,person_number AS personNumber,type,state,start_time AS startTime,end_time AS endTime,create_time AS createTime,update_time AS updateTime,url
      FROM voice_list
      ORDER BY type
    </select>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultType="com.busap.vcs.data.entity.VoiceList">
      SELECT
      id,name,person_number AS personNumber,type,state,start_time AS startTime,end_time AS endTime,create_time AS createTime,update_time AS updateTime,url
      FROM voice_list
      WHERE id = #{id,jdbcType=BIGINT}
    </select>

    <update id="updateByPrimaryKey" parameterType="com.busap.vcs.data.entity.VoiceList">
        update voice_list
        <set>
            <if test="state != null">
                state = #{state,jdbcType=BIT},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>

</mapper>
